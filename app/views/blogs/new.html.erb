<h1>投稿用のページ</h1>
<%= form_for(@blog) do |f| %>
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>カテゴリ</h4>
	<%= f.collection_select :category_id, Category.all, :id, :name %>
	<h4>本文</h4>
	<%= f.text_area :body, size: "100×500" %>
	<h4>画像</h4>
	<%= f.attachment_field :image %>

	<%= f.submit "投稿" %>
<% end %>

<p><%= link_to "Topページへ", blogs_path %></p>
<p><%= link_to "adminページへ", admin_path %></p>

