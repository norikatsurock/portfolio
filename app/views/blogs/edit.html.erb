<h2 style="color: grey;">【ブログ編集ページ】</h2>
<section class="admin-contair clearfix">
<br>
<h3>■ブログ記事の編集</h3>
<%= form_for(@blog) do |f| %>
	<p>タイトル</p>
	<%= f.text_field :title %>
	<p>カテゴリを選択</p>
	<%= f.collection_select :category_id, Category.all, :id, :name %>
	<p>本文</p>
	<%= f.text_area :body %>
	<br>
	<br>
	<% if @blog.image_id.nil?  %>
	<h3>■画像の追加</h3>
	<%= f.attachment_field :image %>
	<% else %>
	<h3>■画像の編集</h3>
	<%= attachment_image_tag @blog, :image ,:fill, 100,100%>
	<%= f.check_box :remove_image %>
	<%= f.label :写真を削除する場合はチェック %>
	<br>
	<br>
	<h4>※画像を差し替える場合は写真を選択する</h4>
	<%= f.attachment_field :image %>
	<% end %>

<br>
<br>
<br>
	<%= f.submit "ブログ記事を更新する" , "data-confirm" => "更新しますか？" %>
<% end %>
<br>
<br>
<p><%= link_to "Topページへ", blogs_path, :style => "color: grey;" %></p>
<p><%= link_to "管理用ページTopへ", admin_path, :style => "color: grey;"  %></p>
</section>
