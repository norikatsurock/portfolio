<h1>編集用のページ</h1>

<%= form_for(@blog) do |f| %>
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>カテゴリ</h4>
	<%= f.collection_select :category_id, Category.all, :id, :name %>
	<h4>本文</h4>
	<%= f.text_area :body %>
	<h4>画像</h4>
	<%= attachment_image_tag @blog, :image ,:fill, 100,100%><br>
	<%= f.check_box :remove_image %>
	<%= f.label :写真の削除 %>
	<br>
	<br>
	<h4>画像を入れ替え</h4>
	<%= f.attachment_field :image %>

<br>
<br>
	<%= f.submit "上書き" , "data-confirm" => "更新しますか？" %>
<% end %>

