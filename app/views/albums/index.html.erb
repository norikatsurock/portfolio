<body>
	<main>
	<section class="main-contair clearfix">
		<section class="album-contair clearfix">
			<h2 class="album-headline">AlbumS</h2>
			<% @albums.each do |album| %>
			<div class="album-box">
				<div class ="album-box-title">
					<%=link_to album.title, album_path(album) %></div>
					<div class="album-box-date"><i class="fa fa-clock-o" aria-hidden="true"></i>
						<%= album.date.strftime("%Y/%m/%d") %>
					</div>
					<div class="album-box-place">
 					  撮影場所:<%= album.place.truncate(7) %>
					</div>
					<div class="album-box-img">
					<% @photos.where(album_id: album).shuffle.first(1).each do |photo| %>
						<%= attachment_image_tag photo, :image, :fill, 240, 180 %>
					<% end %>
					</div>
			</div>
			<% end %>
		</div>
		<div class="paginate"><%= paginate @albums %></div>
		</section>
	</section>
	</main>
	<footer>
		<p class="footer-text">SHIMIZUが初めて作ったサイトです</p>
	</footer>
</body>